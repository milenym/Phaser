{
  "name": "playground",
  "version": "1.0.0",
  "description": "Simple map with Phaser 3",
  "scripts": {
		"start": "parcel src/index.html -p 8000",
		"build": "parcel build src/index.html --out-dir dist",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
  "dependencies": {
		"phaser": "^3.55.2"
	},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
		"minimist": ">=1.2.2",
    "parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
    "typescript": "^4.6.4"
  },
  "author": "Milen Milchev <mmilchev@gmail.com>",
  "repository": {
		"type": "git",
		"url": "https://github.com/milenym/Phaser.git"
	},
  "parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}